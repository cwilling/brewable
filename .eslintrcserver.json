{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "ENV": true,
        "require": true,
        "__dirname": true,
        "process": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console":0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
//        "quotes": [
//            "warn",
//            "double",
//            { "avoidEscape": true }
//        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
